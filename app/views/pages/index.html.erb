<% @page_title = "Overall Page Views" %>

<header class="jumbotron subhead" id="overview">
  <h1><%= @page_title %></h1>
  <p class="lead">Views by datatype: Articles, Faqs, Events, and News</p>
</header>


<%- Page::DATATYPES.each do |datatype| -%>
  <div class="page-header">
    <h1><%= datatype.pluralize %></h1>
  </div>  
  <div class="row-fluid">
    <div class="span4">
      <h3>Last Week</h3>
      <p><%= date_range_for_last_week %></p>
      <%= overall_views_information(datatype)%>
    </div>
  
    <div class="span8">
      <h3>Views over time</h3>
      <%= render(:partial => 'overall_traffic_plot', :locals => {:datatype => datatype})%>     
    </div>
  </div>
<%- end -%>
