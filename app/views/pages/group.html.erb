<% @page_title = "Details for Group ##{@group.id}" %>
<div class="page-header">
  <h1><%= @page.title %></h1>
</div>  


<div class="row-fluid">
  <div class="span4">
    <h3>Last Week</h3>
    <p><%= date_range_for_last_week %></p>
    <%= group_views_information(@group)%>
  </div>
  <div class="span8">
    <div id="graph"></div>
    <script>
      $("#graph").load("<%= traffic_chart_group_path(:id => @group.id) %>");
    </script>     
  </div>
</div>
