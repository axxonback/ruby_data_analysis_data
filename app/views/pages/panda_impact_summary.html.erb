<% @page_title = "Panda Impact Summary By Tag (#{@panda_comparison_weeks} weeks Before/After)" %>
<div class="page-header">
  <h1><%= @page_title %></h1>
</div>  

<div class="row-fluid">
  <div class="span12">
	    <table class="table table-bordered">
        <thead>
          <tr>
            <th>Tag</th>
            <%- Page::DATATYPES.each do |datatype| -%>
              <th><%= datatype.pluralize %></th>
            <%- end -%>
          </tr>
        </thead>
        <tbody>
          <%- @diffs.sort.each do |tag_id,data| -%>
          <tr>
            <td><%= link_to_tag_with_id(tag_id) %></td>
            <%- Page::DATATYPES.each do |datatype| -%>
            <td><%= percentage_if_applicable(data[datatype][:pct_change]) %></td>
            <%- end -%>
          </tr>
          <%- end -%>
        </tbody>
      </table>
  </div>
</div>
