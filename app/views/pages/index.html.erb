<% @page_title = "Overall Page Views" %>

<header class="jumbotron subhead" id="overview">
  <h1><%= @page_title %></h1>
  <p class="lead">Data for <%= year_week_for_last_week%> (<%= date_range_for_last_week%>) </p>
</header>


<%- Page::DATATYPES.each do |datatype| -%>
  <div class="page-header">
    <h1><%= datatype.pluralize %></h1>
  </div>  
  <div class="row-fluid">
    <div class="span4">
      <%= render(:partial => 'overall_views_information', :locals => {:datatype => datatype}) %>
    </div>
  
    <div class="span8">
      <h3>Views per week over time</h3>
      <%= render(:partial => 'overall_traffic_plot', :locals => {:datatype => datatype})%>     
    </div>
  </div>
<%- end -%>
